    <div class="listings-column">
      <!-- Shop Listings -->
      <div class="shop-listings">
        <% @shops.each_with_index do |shop, index| %>
          <%= render 'home/shop_card', shop: shop %>
          
          <% if index == 0 %>
            <!-- Get Free Quotes Banner -->
            <div class="quotes-banner">
              <div class="quotes-banner-inner">
                <p class="quotes-text">Get <strong>free quotes</strong> for lawn mowing.</p>
