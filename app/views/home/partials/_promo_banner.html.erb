<!-- Promotional Banner Section -->
<section class="promo-banner-section">
  <div class="promo-banner-wrapper">
    <div class="promo-banner-container">
      <div class="promo-header-container">
        <h2 class="promo-banner-heading">Why hire a professional on GreenPal?</h2>
        <p class="promo-banner-subtitle">Get free quotes, check ratings, and choose the best pro for your yard.</p>
      </div>
      
      <div class="promo-middle-container">
        <div class="promo-card">
          <div class="promo-card-icon">
            <%= image_tag "promo-icon-1.svg", alt: "Free", class: "promo-icon-img" %>
          </div>
          <h3 class="promo-card-title">Always free to use</h3>
          <p class="promo-card-text">Get quotes, compare pros, and book your lawn service at no cost.</p>
        </div>
        
        <div class="promo-arrow promo-arrow-1">
          <%= image_tag "promo-arrow-1.svg", alt: "", class: "promo-arrow-img" %>
        </div>
        
        <div class="promo-card">
          <div class="promo-card-icon">
            <%= image_tag "promo-icon-2.svg", alt: "Reviews", class: "promo-icon-img" %>
          </div>
          <h3 class="promo-card-title">Trusted Reviews</h3>
          <p class="promo-card-text">Check real homeowner feedback to choose the right pro with confidence.</p>
        </div>
        
        <div class="promo-arrow promo-arrow-2">
          <%= image_tag "promo-arrow-2.svg", alt: "", class: "promo-arrow-img" %>
        </div>
        
        <div class="promo-card">
          <div class="promo-card-icon">
            <%= image_tag "promo-icon-3.svg", alt: "Relax", class: "promo-icon-img" %>
          </div>
          <h3 class="promo-card-title">Hire with Ease & Relax</h3>
          <p class="promo-card-text">Find trusted mower repair shops, compare services, and book with confidence.</p>
        </div>
      </div>
      
      <button class="btn-promo-get-started">Get Started ></button>
    </div>
  </div>
</section>
